
<div class="container">

<nav class="navbar navbar-expand-lg navbar-light bg-light ">
  <div class="container-fluid">
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <form class="d-flex">
        <%= form_tag food_recipes_path, method: "GET" do %>
          <%= label_tag :search_by_ingredient %>
          <%= text_field_tag :search_by_ingredient, params[:search_by_ingredient], class:"form-control me-2" %>
          <%= submit_tag "Search", class:"btn btn-outline-success" %>
        <% end %>
      </form>
    </div>
  </div>
</nav>


<div class="container" >
  <table class="table table-striped table-hover">
    <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Cook Time (min)</th>
      <th>Ingredients</th>
    </tr>
    </thead>
    <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.title %></td>
        <td><%= recipe.author %></td>
        <td><%= recipe.cook_time %></td>
        <td><%= recipe.ingredients_to_s %></td>
    <% end %>
    </tbody>
  </table>
</div>
<br>
<div class="position-relative">
  <div class="position-absolute top-0 start-50 translate-middle">
    <li class="page-item">  <%= page_entries_info @recipes %></li>
    <li class="page-item">  <%= will_paginate @recipes, :container => false %></li>
  </div>
</div>

</div>




